<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@color/white"
    tools:context=".item_publicacao"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_autor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icons8_mais_100" />

        <TextView
            android:id="@+id/txt_autor_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_publicacao"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:background="@color/black" />

    <TextView
        android:id="@+id/txt_titulo_publi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/txt_descricao_publi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição..."
        android:textSize="15sp"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:id="@+id/layout_acoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/btn_curtir"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_like_outline"
            android:contentDescription="Curtir"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/btn_comentar"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_comment"
            android:contentDescription="Comentar" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_num_curtidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 curtidas"
        android:textStyle="bold"
        android:layout_marginTop="4dp" />
</LinearLayout>